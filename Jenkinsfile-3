pipeline {
  agent { label 'linux' }
  environment {
   ANSIBLE_PRIVATE_KEY=credentials('carvajaldev-private-key') 
  }
  stages {
    stage('Hello') {
      steps {
        //sh 'ansible-galaxy collection install -r requirements.yml'
        sh 'ls -la && pwd'
        sh 'ansible-playbook message.yml --user ubuntu -i inventory/dev.hosts --private-key=$ANSIBLE_PRIVATE_KEY'
      }
    }
  }
}
